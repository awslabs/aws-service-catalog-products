{
  "Version": "2012-10-17",
  "Statement": {
    "Sid": "RequireImdsV2",
    "Effect": "Deny",
    "Action": [
      "ec2:RunInstances",
      "ec2:ModifyInstanceMetadataOptions"
    ],
    "Resource": "arn:aws:ec2:*:*:instance/*",
    "Condition": {
      "StringNotEquals": {
        "ec2:MetadataHttpTokens": "required"
      },
      "NumericGreaterThan": {
        "ec2:MetadataHttpPutResponseHopLimit": "1"
      }
    }
  }
}
